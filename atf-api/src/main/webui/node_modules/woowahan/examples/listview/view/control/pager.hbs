<nav class="text-center">
  <ul class="pagination">
    {{#if prev}}
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous" data-page="{{prevPage}}">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    {{/if}}
    {{#each numbers}}
      <li class="page-item{{#if active}} active{{/if}}"><a class="page-link" href="#" data-page="{{num}}">{{num}}</a></li>
    {{/each}}
    {{#if next}}
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next" data-page="{{nextPage}}">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
    {{/if}}
  </ul>
</nav>